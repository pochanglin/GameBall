<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/cvTourn"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="#ffffff"
    android:padding="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:orientation="vertical"
        android:weightSum="10">
        <ImageView
            android:id="@+id/ivTournPic"
            android:src="@drawable/tourn"
            android:layout_width="350dp"
            android:layout_height="150dp"
            android:layout_weight="5"
            android:layout_gravity="center"/>
        <TextView
            android:id="@+id/tvTournName"
            android:text="資策會校友盃賽"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:layout_gravity="center"/>
        <TextView
            android:id="@+id/tvTournStart"
            android:text="開始日期；2017/11/25"
            android:textSize="19sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"/>
        <TextView
            android:id="@+id/tvTournEnd"
            android:text="結束日期；2017/11/25"
            android:textSize="19sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"/>
        <TextView
            android:id="@+id/tvStatus"
            android:text="狀態：進行中"
            android:textSize="19sp"
            android:textColor="@color/colorAccent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"/>
    </LinearLayout>

</android.support.v7.widget.CardView>