<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:padding="5dp"
    android:layout_margin="5dp">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:weightSum="5">
            <!--隊伍A-->
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <ImageView
                    android:id="@+id/ivTeamALogo"
                    android:layout_gravity="center"
                    android:paddingTop="5dp"
                    android:src="@drawable/p1"
                    android:layout_width="match_parent"
                    android:layout_height="70dp" />
                <TextView
                    android:id="@+id/tvTeamAName"
                    android:paddingTop="5dp"
                    android:layout_gravity="center"
                    android:text="中壢小熊隊"
                    android:textSize="20sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <!--時間-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="3"
                android:layout_gravity="center_vertical">
                <TextView
                    android:id="@+id/tvGamedayTime"
                    android:text="8：00 上午"
                    android:textSize="25sp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"/>
                <TextView
                    android:id="@+id/tvGamedayDate"
                    android:layout_gravity="center"
                    android:text="週六 12月 02"
                    android:textSize="15sp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />
                <TextView
                    android:id="@+id/tvGamedayName"
                    android:text="八強賽"
                    android:textSize="30sp"
                    android:textColor="@color/colorAccent"
                    android:paddingTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"/>
            </LinearLayout>
            <!--隊伍B-->
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <ImageView
                    android:id="@+id/ivTeamBLogo"
                    android:src="@drawable/p2"
                    android:paddingTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="70dp" />
                <TextView
                    android:id="@+id/tvTeamBName"
                    android:paddingTop="5dp"
                    android:layout_gravity="center"
                    android:text="中壢小熊隊"
                    android:textSize="20sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <!--BUTTON-->

        </LinearLayout>
        <LinearLayout
            android:paddingTop="5dp"
            android:id="@+id/manageBtnLayout"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:weightSum="10">
            <TextView
                android:layout_weight="8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <Button
                android:id="@+id/btnGamedayLive"
                android:text="觀看文字轉播"
                android:textSize="20sp"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <!--<Button-->
                <!--android:id="@+id/btnDataRecord"-->
                <!--android:text="數據紀錄"-->
                <!--android:textSize="20sp"-->
                <!--android:layout_weight="1"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content" />-->
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>